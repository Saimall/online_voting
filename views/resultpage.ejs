<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50">
            <div class="flex flex-col gap-6">
                <span class="text-5xl font-light ">Election result</span>
                <span class="text-5xl font-light "><%= numberofoptions %></span>
                <ol class="list-decimal mb-5">
                    <% for(let i=0; i<questionslist.length; i++) { %>
                        <li class="my-2">
                            <div class="px-2 py-1">
                                <h3 class="text-2xl my-2"><%= questionslist[i].questionname %></h3>
                                <p class="text-purple-800 text-md my-2"><%= questionslist[i].description %></p>
                            </div>
                            <div class="ml-8">
                                <ol class="list-none">
                                    <% for(let j=0; j< valueoptions[i].length; j++) { %>
                                            <li class="option-item mt-2">
                                                <label class="px-1 my-2" class="ml-2 text-lg "><%= valueoptions[i][j].optionname %></label>
                                                <label class="px-1 my-2"  class="ml-2 text-lg "><%= numberofoptions[i][j] %></label>
                                            </li>
                                    <% } %>
                                </ol>
                            </div>
                        </li>
                    <% } %>
                </ol>
     </div>
</body>
</html>