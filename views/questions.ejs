<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="csrf-token" content="<%= csrfToken %>">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        var token = document.querySelector('meta[name="csrf-token"]').getAttribute("content");
        function removequestion(id) {
            fetch(`/deletequestion/${id}`, {
                method: "delete",
                headers: {"Content-Type":"application/json"},
                body: JSON.stringify({
                    "_csrf":token
                })
            }).then((res)=>{
                if (res.ok) {
                    window.location.reload();
                }
            }).catch((err)=> console.error(err))
        }
    </script>
    <title><%= title %></title>
</head>
<body>
    <%- include('heading.ejs') %>
    <div class="my-6 mx-10">
        <div class="flex gap-2 py-4 justify-between">
            <h5 class="text-2xl"><%= title %> - Questions</h5>
            <div class="bg-black-00  px-2 py-1 hover:bgblack-600">
                <a href="/questionscreate/<%= id %>" class="text-black-600">+ Add a new question</a>
            </div>
        </div>
        <div class="flex-auto">
            <div class="mx-4">  
                <p class="text-purple-600"><%= (questions.length==0)?"You haven't added any questions yet!":"" %></p>
                <ol class="list-decimal">
                    <% for (let i=0; i<questions.length; i++) { %>
                        <li>
                            <div class="flex justify-between items-center w-full my-2 px-2 py-1 rounded hover:bg-purple-50">
                                <div>
                                    <a href="/displayelections/correspondingquestion/<%= id %>/<%= questions[i].id %>/options" class="my-2 text-lg text-purple-600 "><%= questions[i].question %></a>
                                    <p class="text-purple-800 text-md my-2"><%= questions[i].description %></p>
                                </div>
                                <div class="flex gap-2 text-purple-800">
                                    <div class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-purple-600">
        
                                        <a href="" class="text-sm">edit question</a>
                                    </div>
                                     <% if((questions.length) >1) {%> 
                                    <div class="rounded w-fit px-2 py-1 flex gap-2 cursor-pointer hover:text-purple-600">    
                                        <a onclick="removequestion(<%= questions[i].id %>)" class="text-sm">delete question</a>
                                         <%} %>
                                    </div>
                                </div>
                            </div>
                        </li>
                    <% } %>
                </ol>
            </div>
        </div>
    </div>
</body>
</html>